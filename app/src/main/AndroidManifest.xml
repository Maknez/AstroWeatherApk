<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="noname.astroweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_wb_sunny"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_wb_sunny"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".core.Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".core.Settings"
            android:label="Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.Application" />
        </activity>
        <activity android:name=".core.About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".core.Application" />
        </activity>
    </application>

</manifest>